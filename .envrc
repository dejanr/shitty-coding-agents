#!/usr/bin/env bash

if ! has nix_direnv_version || ! nix_direnv_version 3.1.0; then
  source_url "https://raw.githubusercontent.com/nix-community/nix-direnv/3.1.0/direnvrc" "sha256-yMJ2OVMzrFaDPn7q8nCBZFRYpL/f0RcHzhmw/i6btJM="
fi

export DEVENV_IN_DIRENV_SHELL=true
export DEVENV_TASKS_QUIET=1

_nix_direnv_info() { :; }
_nix_direnv_warning() { :; }

watch_file flake.nix
watch_file flake.lock
watch_file devenv.nix

mkdir -p "$PWD/.devenv"
DEVENV_ROOT_FILE="$PWD/.devenv/root"
printf %s "$PWD" >"$DEVENV_ROOT_FILE"

DEVENV_STDERR_LOG="$PWD/.devenv/direnv-stderr.log"
if ! use flake . --impure --quiet --no-update-lock-file --override-input devenv-root "file+file://$DEVENV_ROOT_FILE" 2>"$DEVENV_STDERR_LOG"; then
  cat "$DEVENV_STDERR_LOG" >&2
  echo "devenv could not be built. The devenv environment was not loaded. Fix flake/devenv files and retry." >&2
else
  rm -f "$DEVENV_STDERR_LOG"
fi
